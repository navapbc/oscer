<% content_for :title, t(".title") %>
<%= render "strata/shared/step_indicator", steps: %i[start select_periods add_activities review submitted], current_step: :add_activities, translation_scope: "activity_report_application_forms.steps" %>
<%= link_to t(".back"), activity_report_application_form_path(@activity_report_application_form) %>
<h1><%= t(".title") %></h1>
<%= strata_form_with(url: new_activity_new_activity_report_application_form_activity_path(@activity_report_application_form), method: :get) do |f| %>
  <%= f.fieldset t(".type_label") do %>
    <%= f.radio_button :activity_type, :work_activity, label: t(".hours_label"), tile: false %>
    <%= f.radio_button :activity_type, :income_activity, label: t(".income_label"), tile: false %>
  <% end %>
  <%= f.submit t(".continue"), big: true %>
<% end %>