<% content_for :title, t(".title") %>

<div class="padding-bottom-1 margin-bottom-4">
  <%= back_button_with_icon(t(".back_to_dashboard"), dashboard_path, class: "usa-link") %>
</div>

<%= render "step_indicator", current_step: @current_step %>

<div class="exemption-screener">
  <h1 class="margin-bottom-2">
    <%= t(".heading") %>
  </h1>

  <p class="margin-bottom-4">
    <%= t(".description") %>
  </p>

  <h2><%= t(".exemption_type", exemption_name: @exemption_name) %></h2>
  <p class="margin-bottom-4">
    <%= @exemption_description %>
  </p>

  <h2 class="margin-bottom-2">
    <%= t(".documentation_heading") %>
  </h2>

  <ul class="usa-list margin-bottom-4">
    <% @required_documents.each do |document| %>
      <li><%= document %></li>
    <% end %>
  </ul>

  <%= strata_form_with(
    url: exemption_screener_create_application_path(
      exemption_type: @current_exemption_type,
      certification_case_id: @certification_case.id
    ),
    method: :post,
    data: { turbo: false }
  ) do |f| %>
    <div class="usa-button-group" role="group" aria-label="<%= t('.buttons.actions', default: 'Actions') %>">
      <%= link_to t(".buttons.start_over"),
        exemption_screener_path(certification_case_id: @certification_case.id),
        class: "usa-button usa-button--outline" %>

      <%= f.submit t(".buttons.request_exemption"),
        class: "usa-button" %>
    </div>
  <% end %>
</div>
